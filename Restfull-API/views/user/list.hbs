<h2><a class="btn btn-secondary" href="/user"><i class="fa fa-plus"></i> Create New</a> {{viewTitle}}</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Add Post</th>
            <th>List Posts</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        
        {{#each this.list as |user|}}
    
        <tr>
            <td>{{user.name}}</td>
            <td>{{user.email}}</td>
            <td>{{user.password}}</td>
            <td><a href="/user/{{user._id}}" class="btn btn-link">Add Post</a> </td>
            <td><a href="/user/{{user._id}}/list" class="btn btn-link">List Posts</a></td>
            <td>
                <a href="/user/{{user._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/user/delete/{{user._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>