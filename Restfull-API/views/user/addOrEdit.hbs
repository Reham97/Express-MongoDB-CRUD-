<h2><a class="btn btn-secondary" href="/user/list"><i class="fa fa-list-alt"></i> List All</a> {{viewTitle}}</h2>

<form action="/user" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{user._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name" value="{{user.name}}">
        <div class="text-danger">
            {{user.nameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{user.email}}">
        <div class="text-danger">
            {{user.emailError}}</div>
    </div>
     <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="Password" value="{{user.password}}">
        <div class="text-danger">
            {{user.passwordError}}</div>
    </div>
   
   
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
    </div>
</form>